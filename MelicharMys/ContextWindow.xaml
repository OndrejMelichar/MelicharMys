<Window x:Class="MelicharMys.ContextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MelicharMys"
        mc:Ignorable="d"
        Title="ContextWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="ContextWindow" FontSize="48" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />

        <StackPanel Orientation="Horizontal">
            <Slider  Maximum="30" TickPlacement="BottomRight" TickFrequency="1" Value="5" IsSnapToTickEnabled="True" Name="slValue" />
            <TextBox x:Name="mouseSpeedValueTextBox" Width="40" />
        </StackPanel>
        
    </StackPanel>
</Window>
