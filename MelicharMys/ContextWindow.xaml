<Window x:Class="MelicharMys.ContextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MelicharMys"
        mc:Ignorable="d"
        Title="ContextWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="ContextWindow" FontSize="48" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />

        <StackPanel Orientation="Vertical"  Margin="16,0,16,0">
            <Label Content="Citlivost myši" />
            <StackPanel Orientation="Horizontal">
                <Slider x:Name="mouseSpeedSlider" Width="256" ValueChanged="mouseSpeedSlider_ValueChanged" Maximum="20" TickPlacement="BottomRight" TickFrequency="1" Value="5" IsSnapToTickEnabled="True" />
                <TextBox x:Name="mouseSpeedValueTextBox" Margin="16,0,16,0" TextChanged="mouseSpeedValueTextBox_TextChanged" Width="48" />
                <Button Click="resetMouseSpeed_Click" Padding="8,0,8,0" Content="Obnovit výchozí nastavení" />
            </StackPanel>
        </StackPanel>
        
        
    </StackPanel>
</Window>
